<content>export default function Sidebar() {
  const navItems = [
    { id: 'home', label: 'Home', icon: 'ri-home-5-line' },
    { id: 'about', label: 'About', icon: 'ri-user-3-line' },
    { id: 'resume', label: 'Resume', icon: 'ri-file-text-line' },
    { id: 'portfolio', label: 'Portfolio', icon: 'ri-briefcase-line' },
    { id: 'testimonials', label: 'Testimonials', icon: 'ri-chat-3-line' },
    { id: 'contact', label: 'Contact', icon: 'ri-mail-line' }
  ];
  const scrollToSection = (id: string) => {
    const element = document.getElementById(id);
    if (element) {
      element.scrollIntoView({ behavior: 'smooth' });
    }
  };
  return (
    <aside className="fixed left-0 top-0 h-screen w-64 bg-white shadow-lg z-50 flex flex-col">
      <div className="p-8 border-b border-gray-100">
        <div className="w-24 h-24 mx-auto rounded-full overflow-hidden border-4 border-yellow-400 mb-4">
          <img
            src="https://readdy.ai/api/search-image?query=professional portrait photo of a confident creative designer with warm smile in modern studio lighting with clean neutral background&width=200&height=200&seq=profile001&orientation=squarish"
            alt="Profile"
            className="w-full h-full object-cover object-top"
          />
        </div>
        <h2 className="text-xl font-bold text-center text-gray-800">Sarah Anderson</h2>
        <p className="text-sm text-center text-gray-500 mt-1">Creative Designer</p>
      </div>
      <nav className="flex-1 px-6 py-8">
        {navItems.map((item) => (
          <button
            key={item.id}
            onClick={() => scrollToSection(item.id)}
            className="w-full flex items-center gap-4 px-4 py-3 rounded-lg text-gray-600 hover:bg-yellow-50 hover:text-yellow-500 transition-all duration-200 group cursor-pointer mb-2"
          >
            <div className="w-5 h-5 flex items-center justify-center">
              <i className={`${item.icon} text-xl group-hover:text-yellow-500`}></i>
            </div>
            <span className="font-medium whitespace-nowrap">{item.label}</span>
          </button>
        ))}
      </nav>
      <div className="p-6 border-t border-gray-100">
        <div className="flex justify-center gap-4">
          <a href="https://linkedin.com" className="w-10 h-10 flex items-center justify-center rounded-full bg-gray-100 text-gray-600 hover:bg-yellow-400 hover:text-white transition-all duration-200 cursor-pointer">
            <i className="ri-linkedin-fill text-lg"></i>
          </a>
          <a href="https://github.com" className="w-10 h-10 flex items-center justify-center rounded-full bg-gray-100 text-gray-600 hover:bg-yellow-400 hover:text-white transition-all duration-200 cursor-pointer">
            <i className="ri-github-fill text-lg"></i>
          </a>
          <a href="https://dribbble.com" className="w-10 h-10 flex items-center justify-center rounded-full bg-gray-100 text-gray-600 hover:bg-yellow-400 hover:text-white transition-all duration-200 cursor-pointer">
            <i className="ri-dribbble-fill text-lg"></i>
          </a>
        </div>
      </div>
    </aside>
  );
}
</content>
